<h1><%= @restaurant.name %></h1>
<p>Address: <%= @restaurant.address %></p>
<p>Category: <%= @restaurant.category.capitalize %></p>
<hr>
<p>Add a review:</p>
<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>

<hr>
<ul class="list list-review">
  <% @restaurant.reviews.each do |review| %>
    <li>
      Rating: <% review.rating.times do  %>
        <i class="fas fa-star"></i>
      <% end %>
      
      <br>
      <%= review.content  %>
      <hr>
    </li>
  <% end %>
</ul>

<%= link_to "Go back to the list", restaurants_path %>